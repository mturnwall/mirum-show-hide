{
  "name": "mirum-show-hide",
  "version": "0.1.1",
  "description": "A module to show and hide a block of content. For example an article that has a \"read more\" section.",
  "main": "show_hide.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "test": "nyc ava --verbose",
    "build": "npm run clean && webpack --env=prod --progress --colors",
    "serve": "webpack-dev-server --env=dev --progress --colors",
    "report": "nyc report --reporter=html"
  },
  "repository": {
    "type": "git",
    "url": "https://mturnwall@stash.mirum.agency:8443/scm/~mturnwall/mirum-show-hide.git"
  },
  "author": "Michael Turnwall (Mirum, Inc)",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.4.0",
    "babel-plugin-rewire": "^1.0.0",
    "babel-preset-env": "^1.2.1",
    "browser-env": "^2.0.25",
    "eslint": "^3.17.1",
    "eslint-loader": "^1.6.3",
    "nyc": "^10.1.2",
    "rimraf": "^2.6.1",
    "sinon": "^2.0.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.2"
  },
  "ava": {
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ]
  },
  "nyc": {
    "exclude": [
      "test/**/*.js"
    ]
  }
}
